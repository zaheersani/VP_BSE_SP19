<Window x:Class="WPFApplication.BackgroundWorkerDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApplication"
        mc:Ignorable="d"
        Title="BackgroundWorkerDemo" Height="200" Width="200" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="btnStart" FontSize="24" Content="Start" HorizontalAlignment="Left" Margin="60,85,0,0" VerticalAlignment="Top" Width="75" Click="BtnStart_Click"/>
        <Label x:Name="lblCounter" FontSize="24" HorizontalContentAlignment="Center" Content="0" HorizontalAlignment="Left" Margin="60,23,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
